<div id="container">
		<header>

			<h1>C.A.P.P.A.B.L.E. <sup>&#169;</sup></h1>
			<p class="description">Sensory Evaluation of treated apples
			   <%= link_to image_tag("home2.png", size: "63x63", :border=>"0", :align=>"right"), '/', :alt=>"Home", :title=>"Home"%>
			</p>

		</header>
	<div id="wrapper">
	<section id="content">


<h2>Calculate sensory evaluation of apples treated with various anti-browning treatments</h2>
<br>
<strong>Select apple cultivar:</strong>
<br>

<%= form_tag('/apple/eq5') %>

<%= radio_button_tag(:sorta, value = "1", checked = true, options = {})  %>
<%= label_tag(:cultivars,'Golden Delicious') %>
<br>
<%= radio_button_tag(:sorta, value = "2", checked = false, options = {})  %>
<%= label_tag(:cultivars,'Cripps Pink') %>
<br>

<br>
<strong>Select anti-browning treatment:</strong>
<br>
<br>
<%= select_tag( :treatment,options_for_select(
[	["No treatment",1],
	["Ascorbic with citric acid",2],
	["Ascorbic acid with NaCl",3],
	["Ascorbic acid with CaCl2",4],
	["NaCl",5],
	["Citric acid",6],
	["Ca-ascorbate",7],
	["Ultrasound (1 min) with Ca-ascorbate",8],
	["Ultrasound (3 min) with Ca-ascorbate",9],
	["Ultrasound (1 min) ascorbic and citric acid",10],
	["Ultrasound (3 min) ascorbic and citric acid",11]
]),{})
%>
<br>
<% unless @rezultat.nil? %>
<br>Color change is: 
<strong>
	<div style="color:red">ΔE*ab = <%= number_with_precision @rezultat,:precision=>2  %> 
	
	</div>
</strong>
<% end %>
<br>
<%= submit_tag('Calculate') %>
</section>
</div>


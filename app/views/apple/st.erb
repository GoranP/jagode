		#content		{ margin-left: 34.3%; }
		#extra			{ float: right; clear: right; width: 30%; }		/* Footer */
		footer			{ background: #666; border-bottom: 2px solid #aaa; clear: both; width: 100%; }
		footer a		{ color: #fff; }
